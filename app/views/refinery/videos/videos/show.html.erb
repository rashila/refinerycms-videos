<% content_for :body_content_title do %>
  <%= @video.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @video.name %>
    </p>
  </section>
  <section>
    <h1>Org File Path</h1>
    <p>
      <%=raw @video.org_file_path %>
    </p>
  </section>
  <section>
    <h1>Type</h1>
    <p>
      <%=raw @video.type %>
    </p>
  </section>
  <section>
    <h1>Converted</h1>
    <p>
      <%=raw @video.converted %>
    </p>
  </section>
  <section>
    <h1>Conv File Path</h1>
    <p>
      <%=raw @video.conv_file_path %>
    </p>
  </section>
  <section>
    <h1>Size</h1>
    <p>
      <%=raw @video.size %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="videos">
      <% @videos.each do |video| %>
        <li>
          <%= link_to video.name, refinery.videos_video_path(video) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
